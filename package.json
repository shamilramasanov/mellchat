{
  "name": "mellchat",
  "version": "2.0.0",
  "description": "Real-time chat aggregator - Monorepo",
  "private": true,
  "scripts": {
    "build:frontend": "cd frontend/pwa && npm install && npm run build",
    "build:backend": "cd backend/api-gateway && npm install",
    "start": "cd backend/api-gateway && npm install && npm start",
    "dev:frontend": "cd frontend/pwa && npm run dev",
    "dev:backend": "cd backend/api-gateway && npm run dev"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "backend/api-gateway",
    "frontend/pwa"
  ]
}
