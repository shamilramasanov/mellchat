{
  "buildCommand": "cd frontend/pwa && npm install && npm run build",
  "outputDirectory": "frontend/pwa/build",
  "framework": "create-react-app",
  "installCommand": "cd frontend/pwa && npm install",
  "devCommand": "cd frontend/pwa && npm start",
  "root": ".",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://mellchat-production.up.railway.app/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}